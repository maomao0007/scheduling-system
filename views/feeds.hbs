{{> schedule-tabs route='feeds'}}

<div class="container-fluid mt-4">
  <h2 class="mb-4 text-center">Notifications</h2>

  <div class="row">

    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h2 class="h5 mb-0">Schedules</h2>
        </div>
        <div class="card-body">
          {{#if schedules.length}}
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Shift</th>
                    <th>Created</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each schedules}}
                    {{#ifCond this.userId ../user.id}}
                      <tr>
                        <td>{{formatDate this.date}}</td>
                        <td>{{this.Shift.name}}</td>
                        <td>{{formatDate this.createdAt}}</td>
                      </tr>
                    {{/ifCond}}
                  {{/each}}
                </tbody>
              </table>
            </div>
          {{else}}
            <p class="text-muted">No schedules available.</p>
          {{/if}}
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-success text-white">
          <h2 class="h5 mb-0">Leaves</h2>
        </div>
        <div class="card-body">
          {{#if leaves.length}}
            {{#each leaves}}
              {{#ifCond this.userId ../user.id}}
                <div class="leave-item mb-3 p-3 border rounded">
                  <div><strong>Leave Type:</strong> {{this.name}}</div>
                  <div><strong>Start Date:</strong> {{formatDate this.startDate}}</div>
                  <div><strong>End Date:</strong> {{formatDate this.endDate}}</div>
                  <div><strong>Status:</strong> {{this.status}}</div>
                  <div><strong>Created:</strong> {{formatDate this.createdAt}}</div>
                </div>
              {{/ifCond}}
            {{/each}}
          {{else}}
            <p class="text-muted">No leaves available.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>