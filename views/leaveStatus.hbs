{{> schedule-tabs route='leaveStatus'}}

<div class="container mt-4">
  <h2 class="mb-4">My Leave Requests</h2>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Leave Type</th>
          <th>Reason</th>
          <th>Status</th>
          <th>Approved By</th>
        </tr>
      </thead>
      <tbody>
        {{#each leaves}}
        <tr>
          <th>{{add @index 1}}</th>
          <td>{{formatDate this.startDate}}</td>
          <td>{{formatDate this.endDate}}</td>
          <td>{{this.name}}</td>
          <td>{{this.reason}}</td>
          <td>{{this.status}}</td>
          <td>{{this.ApprovedBy.name}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  {{#unless leaves.length}}
  <div class="alert alert-info" role="alert">
    You haven't submitted any leave requests yet.
  </div>
  {{/unless}}
</div>