<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 mb-4">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <div class="row align-items-center">
            <div class="col-md-4 text-center">
              <img class="img-fluid rounded-circle shadow profile-image" src="{{ profileUser.image }}" alt="{{ profileUser.name }}'s profile picture" onload="this.style.opacity=1">
            </div>
            <div class="col-md-8">
              <h3 class="mb-3 font-weight-bold text-primary">
                {{ profileUser.name }}
                {{#if profileUser.isAdmin}}
                  <span class="text-warning ml-2">(Admin)</span>
                {{/if}}
              </h3>
              <p class="mb-2">
                <i class="fas fa-envelope mr-2 text-muted"></i>
                <a href="mailto:{{ profileUser.email }}" class="text-decoration-none">{{ profileUser.email }}</a>
              </p>
              <p class="mb-2">
                <i class="fas fa-id-card mr-2 text-muted"></i>
                <span class="text-secondary">ID: {{ profileUser.id }}</span>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="form-row mb-3 mt-3">
        {{#ifCond user.id profileUser.id}}
          <a href="/users/{{profileUser.id}}/edit" class="btn btn-primary">Edit Profile</a>
        {{/ifCond}}
        <a class="btn btn-outline-info" href="javascript:history.back()">Back</a>
      </div>
    </div>
  </div>
</div>
