{{> admin-tabs route="leaves" }}

<div class="container mt-4">
  <h2 class="mb-4">Leave Requests</h2>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>User ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Leave Types</th>
          <th>Reason</th>
          <th>Status</th>
          <th>Approved By</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each leaves}}
        <tr>
          <th>{{add @index 1}}</th>
          <td>{{this.User.id}}</td>
          <td>{{this.User.name}}</td>
          <td>{{this.User.email}}</td>
          <td>{{formatDate this.startDate}}</td>
          <td>{{formatDate this.endDate}}</td>
          <td>{{this.name}}</td>
          <td>{{this.reason}}</td>
          <td>{{this.status}}</td>
          <td>{{this.ApprovedBy.name}}</td>
          <td>
            <a href="/admin/leaves/{{this.id}}" class="btn btn-primary">Check</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>